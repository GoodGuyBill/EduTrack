<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduTrak.TermCourseListPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Courses" FontSize="Large" />
            <Button Text="Add New Course" Clicked="OnAddCourseClicked" />
            <ListView x:Name="CoursesListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Detail="{Binding StartDate}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    
