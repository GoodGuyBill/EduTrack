<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduTrack.TermDetailPage"
             Title="EduTrack">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Term Detail" FontSize="Large" />
            <Entry x:Name="TitleName" Placeholder="Term Title" />
            <!--<Entry Placeholder="Term Title" x:Name="TermTitleEntry" />  -->
            <DatePicker x:Name="StartDatePicker" />
            <DatePicker x:Name="EndDatePicker" />
            <Button Text="Save" Clicked="OnSaveClicked" HorizontalOptions="Center" HeightRequest="40" WidthRequest="150"/>
            <Button Text="Delete" Clicked="OnDeleteClicked" HorizontalOptions="Center" HeightRequest="40" WidthRequest="150"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
